@model IEnumerable<Infraestucture.Models.Rol>

@{
    ViewBag.Title = "Roles";
}


<h2>Roles</h2>



<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descripcionRol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcionRol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idRol }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idRol }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idRol })
                </td>
            </tr>
        }
    </tbody>
</table>
